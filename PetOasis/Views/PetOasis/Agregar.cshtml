@model PetOasis.Models.Accesorio
@using PetOasis.Models;

@{
    ViewBag.Title = "Agregar";
}
<style>
    h2 {
        text-align: center;
    }

    table {
        margin: 0 auto;
    }

    body {
        background-image: linear-gradient(to left, #ffd89b, #F8F3EC);
        padding-top: 0px;
        font-family: 'Chelsea Market';
    }
</style>

<div>
    <h4>Accesorio</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.codigo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.codigo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.precio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.precio)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.cantidad)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cantidad)
        </dd>

        <dd>
            <img src="@Url.Content(Model.imgAcc)" />
        </dd>

    </dl>
</div>

@using (Html.BeginForm("Agregar", "PetOasis", FormMethod.Post))
{
    
    @Html.Hidden("cod", Model.codigo)
    @Html.Hidden("cantidad", Model.cantidad)
<div>
    <em>Ingrese la cantidad</em>
    @Html.TextBox("cant", 1)
    <br />
    <input type="submit" value="Procesar" class="btn btn-primary" />
    @Html.ActionLink("Retornar", "ComprarAccesorios", null, new { @class = "btn btn-primary" })
</div>
}

<div>@ViewBag.mensaje</div>