@model PetOasis.Models.Accesorio
@using PetOasis.Models;

@{
    ViewBag.Title = "Agregar";
}
<style>
    h2 {
        text-align: center;
    }
    .container.body-content {
        margin-left: 0;
        margin-right: 0;
        padding-left: 0;
        padding-right: 0;
        width: 100%;
        height: 100%;
    }

    html {
        width: 100%;
        height: 100%;
    }
    table {
        margin: 0 auto;
    }
    hr{
        border:0;
    }
    body {
        background-image: linear-gradient(to left, #ffd89b, #F8F3EC);
        padding-top: 0px;
        font-family: 'Chelsea Market';
        width:100%;
    }
    .izquierda {
        margin-left: 15%;
    }
    .derecha {
        float: left;
        width: 80%;
        margin-left:20%;
    }
    .general{
        margin-top:6%;
    }
    dt {
        font-size: 20px;
        color:saddlebrown;
    }
    dd {
        font-size: 19px;
    }
</style>
<div class="general">
    <div class="izquierda">
        <hr />
        <dl class="dl-horizontal">
            <div style="width:40%;float:left;margin-top:5%;">
                <dt>
                    @Html.DisplayNameFor(model => model.codigo)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.codigo)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.nombre)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.nombre)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.precio)
                </dt>

                <dd>
                    S/. @Html.DisplayFor(model => model.precio)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.cantidad)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.cantidad)
                </dd>
            </div>
            <div style="width:45%;float:left;display:block">
                <dd>
                    <img style="width:70%;border:2px solid black;" src="@Url.Content(Model.imgAcc)" />
                </dd>
            </div>

        </dl>
    </div>

    <div class="derecha">
        @using (Html.BeginForm("Agregar", "PetOasis", FormMethod.Post))
        {

            @Html.Hidden("cod", Model.codigo)
            @Html.Hidden("cantidad", Model.cantidad)
        <div>
            <span style="font-family:'Chelsea Market';font-size:16px;">Ingrese la cantidad</span>@Html.TextBox("cant", 1,null,new { @style="height:35px;width:10%;margin-left:2%;"})
            <br />
            <br />
            <input type="submit" value="Procesar" class="btn btn-primary" style="background-color:black;border:black;height:38px;width:10%;margin-right:1%;"/>
            @Html.ActionLink("Retornar", "ComprarAccesorios", null, new { @class = "btn btn-primary",@style= "background-color:black;border:black;height:38px;width:10%;" })
        </div>
        }

        <div>@ViewBag.mensaje</div>

    </div>
</div>