
@{
    ViewBag.Title = "MenuAdmin";
}
<style>
    body {
        background-image: linear-gradient(to right, #0E202C, #1F1A2E);
        height: 90%;
        width: 100%;
    }
    html {
        height: 90%;
    }

    .container.body-content {
        margin-left: 0;
        margin-right: 0;
        padding-left: 0;
        padding-right: 0;
        width: 100%;
        height: 100%;
    }
    h2 {
        margin-top:2%;
        text-align:center;
        font-weight:bold;
        color:white;
    }
    h3 {
        text-align: center;
        color: white;
    }
    .izquierda {
        margin-top: 4%;
        width: 30%;
        float: left;
        margin-left: 18%;
        border:2px solid;
        border-color:ghostwhite;
        height:60%;
    }
    .derecha {
        margin-top: 4%;
        width: 30%;
        float: right;
        margin-right: 18%;
        border: 2px solid;
        border-color: ghostwhite;
        height: 60%;
    }
    hr{
        border:0;
    }
    
</style>
<h2>Menu Administrador</h2>



<div class="izquierda">
    <h3>Mantenimientos</h3>
